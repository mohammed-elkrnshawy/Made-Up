<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:background="@color/colorAccent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SharedPackage.SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.intrusoft.squint.DiagonalView
            android:layout_weight="1"
            android:id="@+id/diagonal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/colorPrimary"
            app:diagonalDirection="left_to_right"
            app:angle="20"
            app:gravity="right" />

        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/ic_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout

                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:paddingBottom="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_scissors"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_ballofwool"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_origami"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_ballofwool"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_scissors"/>

                </LinearLayout>
            </RelativeLayout>

            
        </RelativeLayout>
    </LinearLayout>

   <RelativeLayout
       android:background="@drawable/shape_backring"
       android:padding="30dp"
       android:layout_centerInParent="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <android.support.v7.widget.CardView
           android:layout_width="135dp"
           android:layout_height="135dp">
           <ImageView
               android:src="@drawable/ic_logoislide"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </android.support.v7.widget.CardView>
   </RelativeLayout>

</RelativeLayout>